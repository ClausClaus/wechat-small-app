/* 文章列表 start */

.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}
.post-container:last-child{
    margin-bottom: 0;
}
.post-container .post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}

.post-container .post-author-date .post-author-avatar {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-container .post-author-date .post-date {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5px;
    font-size: 26rpx;
}

.post-container .post-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.post-container .post-img {
    width: 100%;
    height: 340rpx;
}

.post-container .post-content {
    color: #666;
    font-size: 26rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}

.post-container .post-comment {
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.post-container .post-comment .comment-img {
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.post-container .post-comment .comment-num {
    vertical-align: middle;
    margin-right: 20px;
}






/* 文章列表 end */
