<template name="starsTemplate">
    <view class="stars-contaienr">
        <viee class="stars">
            <block wx:for="{{stars}}" wx:for-item="i">
                <image wx:if="{{i === 'on'}}" src="/images/icon/star.png"></image>
                <image wx:elif="{{i === 'half'}}" src="/images/icon/half-star.png"></image>
                <image wx:elif="{{i === 'off'}}" src="/images/icon/none-star.png"></image>
            </block>
        </viee>
        <text class="star-score">{{score}}</text>
    </view>
</template>
